version: 1
applications:
  - appRoot: ui
    frontend:
      phases:
        preBuild:
          commands:
            - nvm install 20
            - nvm use 20
            - node -v
            - npm ci --legacy-peer-deps
        build:
          commands:
            - npm run build
      artifacts:
        baseDirectory: dist/fijian-rag-app
        files:
          - '**/*'
      cache:
        paths:
          - node_modules/**/*
  - appRoot: amplify
    backend:
      phases:
        preBuild:
          commands:
            - nvm install 20
            - nvm use 20
            - node -v
            - npm ci
        build:
          commands:
            - npm run build
